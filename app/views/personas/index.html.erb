<h1>Listing personas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Estado</th>
      <th>Celular</th>
      <th>Correo</th>
      <th>Contrasena</th>
      <th>Carreras</th>
      <th>Cursos</th>
      <th>Perfil</th>
      <th>Tipo usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.estado %></td>
        <td><%= persona.celular %></td>
        <td><%= persona.correo %></td>
        <td><%= persona.contrasena %></td>
        <td><%= persona.carreras %></td>
        <td><%= persona.cursos %></td>
        <td><%= persona.perfil %></td>
        <td><%= persona.tipo_usuario %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Persona', new_persona_path %>
